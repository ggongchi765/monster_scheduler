<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Sched">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="할 일 목록"
                android:textSize="30dp"
                android:background="@color/colorPrimaryDark"
                android:textColor="#ffffff"/>

            <ListView
                android:layout_margin="16dp"
                android:id="@+id/list_to_do"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>

        </LinearLayout>

        <Button
            android:id="@+id/coin_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="150dp"
            android:layout_marginStart="120dp"
            android:background="@drawable/coin"
            android:visibility="visible" />

        <TextView
            android:id="@+id/coin_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignBottom="@+id/coin_image"
            android:layout_alignEnd="@+id/add_button"
            android:text="0000"
            android:textColor="@color/colorPrimaryDark"
            android:textFontWeight="32"
            android:textSize="32dp" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="36dp"
            android:background="#00000000"
            android:drawableEnd="@drawable/add"
            android:onClick="onClickAdd"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="552dp"

            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>